<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">


        <ImageView
            android:id="@+id/idImageButton"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-15dp"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pmii" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Selamat Datang!"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="@dimen/margin_menu_main"
            android:layout_weight="2"
            android:padding="5dp"
            android:background="@color/black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_menu_subMain"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/idbtnActivity1"
                    android:layout_width="@dimen/width_menu_card"
                    android:layout_height="160dp"
                    android:layout_margin="@dimen/margin_menu_card"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:orientation="vertical"
                        android:background="@color/colorkuning">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_menu_image"
                            android:layout_weight="2"
                            android:padding="@dimen/menu_image_padding"
                            android:src="@drawable/ic_home_black_24dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_menu_textMenu"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="SEJARAH KOPRI"
                            android:textSize="13dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/idbtnActivity3"
                    android:layout_width="@dimen/width_menu_card"
                    android:layout_height="160dp"
                    android:layout_margin="@dimen/margin_menu_card"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:orientation="vertical"
                        android:background="@color/colorkuning">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_menu_image"
                            android:layout_weight="2"
                            android:padding="@dimen/menu_image_padding"
                            android:src="@drawable/ic_content_paste_black_24dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_menu_textMenu"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="PO"
                            android:textSize="13dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/idbtnActivity4"
                    android:layout_width="@dimen/width_menu_card"
                    android:layout_height="160dp"
                    android:layout_margin="@dimen/margin_menu_card"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:orientation="vertical"
                        android:background="@color/colorkuning">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_menu_image"
                            android:layout_weight="2"
                            android:padding="@dimen/menu_image_padding"
                            android:src="@drawable/ic_people_black_24dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_menu_textMenu"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:text="AD / ART"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="13dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>